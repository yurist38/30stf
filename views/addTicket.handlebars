<h3>Please fill our super short form...</h3>

<form id="bookForm">
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <input type="text" class="form-control" name="ticketName" id="ticketName"
                    value="" placeholder="Your Name" required>
            </div>
            <div class="form-group">
                <div class='input-group date'>
                    <input type='text' class="form-control" name='ticketDate' id='ticketDate'
                        placeholder="Choose The Date" required>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <button id="bookTicketBtn" type="submit" class="btn btn-primary" disabled>
                Book
            </button>
        </div>
    </div>
</form>
